<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dept.DeptMapper3">
	
	<select id="selectDynamicDeptno" parameterType="hashmap" resultType="com.dto.Dept">
		select * from dept
		<if test ="deptno != null">
		where deptno = #{deptno}
		</if>
	</select>
	
	<select id="selectDynamicDeptno1" parameterType="dept" resultType="com.dto.Dept">
		select * from dept
		<if test ="deptno != 0">
		where deptno = #{deptno}
		</if>
	</select>
	
	
	<select id="selectDynamicChoose" parameterType="hashmap" resultType="com.dto.Dept">
	select deptno, dname, loc from dept
	<choose>
	<when test = "dname !=null and loc !=null">
	where dname = #{dname} and loc =#{loc}
	</when>
	<when test="dname != null">
	where dname =#{dname}
	</when>
	<when test="Loc !=null">>
	where loc=#{loc}
	</when>
	<otherwise>
	where deptno=10
	</otherwise>
	</choose>
	</select>
</mapper>
<!--dname과 loc가 둘 다 낫널
중간에 앤드
마이바티스 홈페이지에 동적 sql 작성문 참고해서 만들것  -->
